package Java_Interviews_EntryTest.MentorMate;

import java.util.*;
import java.io.*;

class Main {

    public static String StringChallenge(String str) {
        // code goes here
        StringBuilder strOutput = new StringBuilder();
        String lowerCaseAlphabetical = "abcdefghijklmnopqrstuvwxyz";

        for(int i = 0; i < str.length(); i++){
            char currentChar = Character.toLowerCase(str.charAt(i));
            if(lowerCaseAlphabetical.indexOf(currentChar) >= 0){
                strOutput.append(currentChar);
            }else{
                if (i < str.length() - 1){
                    char nextCharToUpperCase = str.charAt(i+1);
                    char charToAdd = Character.toUpperCase(nextCharToUpperCase);
                    strOutput.append(charToAdd);
                }if(i == str.length() - 1){
                    char charToUpperCase = str.charAt(i);
                    char charToAdd = Character.toUpperCase(charToUpperCase);
                    strOutput.append(charToAdd);
                }
                i++;
            }
        }
        return strOutput.toString();
    }

    public static void main (String[] args) {
        // keep this function call here
        Scanner s = new Scanner(System.in);
        System.out.print(StringChallenge(s.nextLine()));
    }

}
